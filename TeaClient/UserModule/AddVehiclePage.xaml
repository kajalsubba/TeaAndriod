<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeaClient.UserModule.AddVehiclePage">
    <ContentPage.Content>
        <StackLayout Padding="10" VerticalOptions="Fill" HorizontalOptions="FillAndExpand" >

            <Label x:Name="HeaderName" Text="Vehicle Entry" FontSize="24" HorizontalOptions="Center" />

                <Label Text="Vehicle No" />
                <Entry x:Name="txtVehicleNo" Placeholder="Enter Vehicle No"  MaxLength="15"/>
                <Label Text="Details" />
                <Editor x:Name="txtDetails" Placeholder="Enter Details" />
                <Button VerticalOptions="Center" Text="Save" TextColor="White" 
          BackgroundColor="#008CBA"
          BorderColor="Gray"
  BorderWidth="1.5"
  CornerRadius="10" Clicked="OnSubmitClicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>