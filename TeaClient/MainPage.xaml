<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeaClient.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
        <Frame BackgroundColor="#006a55" CornerRadius="5" HasShadow="False" Padding="0" Margin="5">
            <Button VerticalOptions="Center" 
        Text="STG Section" 
        TextColor="White" 
        BackgroundColor="#008CBA"
        BorderColor="Gray"
        BorderWidth="1.5"
        CornerRadius="0" 
        WidthRequest="100" 
        HeightRequest="100" Clicked="BtnClient_Clicked"/>
     

        </Frame>
        <Frame BackgroundColor="#006a55" CornerRadius="5" HasShadow="False" Padding="0" Margin="5">
            <Button VerticalOptions="Center" 
        Text="SUPPLIER SECTION" 
        TextColor="White" 
        BackgroundColor="#008CBA"
        BorderColor="Gray"
        BorderWidth="1.5"
        CornerRadius="0" 
        WidthRequest="100" 
        HeightRequest="100" Clicked="BtnSupplier_Clicked"/>
        </Frame>
    </StackLayout>

</ContentPage>
